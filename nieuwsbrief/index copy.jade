mixin table(rowClass, wrapperClass)
	table(class='#{rowClass}')
		tbody
			tr
				td(class='wrapper #{wrapperClass}')
					table.twelve.columns
						tbody
							tr
								block
				
extends default-external-stylesheets
block header 
	- var baseTitle = 'Master it Training Update';
block content
	+table('row online-version-link', 'last')
		td.text-centered
			a(href="http://www.masterit.nl/nieuwsbrief.html") Klik hier voor de online versie
	+table('inner-container', 'last wrapper--no-padding')
		td
			+table('row hero__image', 'last')
				td.mail-header.bg--dark
					img(src="img/Master-It-Logo-550x200px-WHITE-RED-PADDED.png" alt="Master it logo")
			+table('row hero__date', 'last')
				td.bg--dark.text-centered.mail-date
					| Update week 25, 2014					
			+table('row body__text', 'last')
				td.padding-left-right.blog-item			
					h2.blog-title Blog: op afstand je office documenten bedienen
					h3.blog-author Auteur: Michiel van der Arend
					img.blog-image(src="img/officeremote_large_verge_medium_landscape-220x124px.jpg")
